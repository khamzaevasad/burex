<%- include('includes/header') %>

<link rel="stylesheet" href="/css/products.css" />

<body>
  <div class="products-container">
    <!-- Navigation -->
    <nav class="nav-bar">
      <ul class="nav justify-content-center flex-wrap">
        <li class="nav-item">
          <a class="nav-link" href="/admin/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/product/all">Menu</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/user/all">Users</a>
        </li>
        <li class="nav-item">
          <a
            class="nav-link logout"
            href="/admin/logout"
            onclick="return confirm('Do you want to logout?')"
            >Logout</a
          >
        </li>
      </ul>
    </nav>

    <!-- Content -->
    <main class="menu-section">
      <h1 class="section-title">Restaurant Menu</h1>

      <div class="table-wrapper">
        <table
          class="table table-bordered table-hover text-center align-middle"
        >
          <thead class="thead-light">
            <tr>
              <th>T/r</th>
              <th>Product Name</th>
              <th>Type</th>
              <th>Volume</th>
              <th>Price</th>
              <th>Left Count</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody style="background: white">
            <tr>
              <td>1</td>
              <td>Steak</td>
              <td>Dish</td>
              <td>Normal</td>
              <td>11</td>
              <td>100</td>
              <td>
                <select class="spec-select new-product-status">
                  <option value="PAUSE" selected>PAUSE</option>
                  <option value="PROCESS">PROCESS</option>
                  <option value="DELETE">DELETE</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="btn-wrapper">
          <button class="btn btn-primary" id="process-btn">New Product</button>
        </div>
      </div>

      <!-- Create Form -->
      <form
        action="/admin/product/create"
        method="POST"
        class="dish-container"
        enctype="multipart/form-data"
      >
        <h2 class="section-subtitle">New Product Detail</h2>

        <div class="form-group">
          <label>Product Name</label>
          <input
            type="text"
            name="productName"
            class="form-control"
            placeholder="Name"
            required
          />
          <input type="hidden" name="productStatus" value="PAUSE" />
        </div>

        <div class="form-row">
          <div class="form-group half">
            <label>Product Price</label>
            <input
              type="number"
              name="productPrice"
              class="form-control"
              placeholder="Price"
              required
            />
          </div>
          <div class="form-group half">
            <label>Left Count</label>
            <input
              type="number"
              name="productLeftCount"
              class="form-control"
              placeholder="Counts"
              required
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group half">
            <label>Product Type</label>
            <select class="form-control" name="productCollection">
              <option value="DISH">Dish</option>
              <option value="SALAD">Salad</option>
              <option value="DESSERT">Dessert</option>
              <option value="DRINK">Drink</option>
              <option value="OTHER">Other</option>
            </select>
          </div>
          <div class="form-group half">
            <label>Dish Volume</label>
            <select class="form-control" name="productSize">
              <option value="SMALL">Small</option>
              <option value="NORMAL" selected>Normal</option>
              <option value="LARGE">Large</option>
              <option value="SET">Set</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label>Product Description</label>
          <textarea name="productDesc" class="form-control" rows="4"></textarea>
        </div>

        <div class="form-group">
          <label>Product Images</label>
          <div class="upload-frame">
            <% for(let i = 1; i <= 5; i++) { %>
            <div class="upload-box">
              <img src="/img/upload.svg" id="image-section-<%= i %>" />
              <input type="file" name="productImages" id="file" />
            </div>
            <% } %>
          </div>
        </div>

        <div class="form-actions">
          <button class="btn btn-danger" id="cancel-btn">Cancel</button>
          <button type="submit" class="btn btn-primary" id="create-btn">
            Create
          </button>
        </div>
      </form>
    </main>
  </div>

  <script src="/js/products.js"></script>
</body>

<%- include('includes/footer') %>
